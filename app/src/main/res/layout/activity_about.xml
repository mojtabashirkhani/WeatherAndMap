<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slimshady.googlemap.AboutActivity"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:id="@+id/cardView"
        android:fadingEdgeLength="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/transparent_black"

        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هوا + نقشه"
        android:id="@+id/about_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:textSize="25sp"
        android:textColor="@android:color/white"

        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/about_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" نسخه : 1.3 "
        android:id="@+id/about_version"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="225dp"
        android:textColor="@android:color/white"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="میتوانید با ایمیل زیر با من در ارتباط باشید"
        android:id="@+id/about_tel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mojtabashirkhani.nba@gmail.com"
        android:id="@+id/about_gmail"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="360dp"
        android:textSize="20sp"
        android:autoLink="email"
        />


    </android.support.v7.widget.CardView>

</RelativeLayout>
